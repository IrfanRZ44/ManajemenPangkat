<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/CustomStyle"
    android:background="@color/white"
    tools:context="com.exomatik.manajemenpangkat.ui.user.JabatanActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:contentInsetEnd="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:popupTheme="@style/CustomStyle.PopupOverlay"
            app:titleTextColor="@color/white">

            <RelativeLayout
                android:id="@+id/customeToolbar"
                android:layout_width="wrap_content"
                android:layout_height="?actionBarSize"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:visibility="visible"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgStyle"
                    android:layout_width="@dimen/_60"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:scaleType="centerInside"
                    android:src="@color/colorPrimaryDark"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/actionBarName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/h2"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="@string/jabatan"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_h3"
                    android:textStyle="bold"
                    android:layout_toEndOf="@+id/imgStyle"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/textJabatanLama"
            android:text="@string/jabatan_lama"
            android:textSize="@dimen/text_h3"
            android:textColor="@color/black"
            android:layout_below="@+id/toolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/h3"
            android:layout_marginStart="@dimen/_30"
            android:layout_marginEnd="@dimen/_30"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_marginStart="@dimen/h5"
            android:layout_marginEnd="@dimen/h5"
            app:cardElevation="@dimen/h2"
            app:cardCornerRadius="@dimen/h2"
            android:layout_below="@+id/textJabatanLama"
            android:id="@+id/cardOldJabatan"
            android:layout_marginTop="@dimen/h2"
            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/h2"
                android:orientation="vertical"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:id="@+id/textOldJabatan"
                    android:text="@string/jabatan"
                    android:textSize="@dimen/text_h2"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/h5"
                    android:padding="@dimen/h2"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:id="@+id/textOldJenis"
                    android:text="@string/jenis_jabatan"
                    android:textSize="@dimen/text_h2"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/h3"
                    android:padding="@dimen/h2"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:id="@+id/textOldTanggal"
                    android:text="@string/tanggal_sk_jabatan"
                    android:textSize="@dimen/text_h2"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/h3"
                    android:padding="@dimen/h2"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:id="@+id/textOldTMTJabatan"
                    android:text="@string/tmt_jabatan"
                    android:textSize="@dimen/text_h2"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/h3"
                    android:padding="@dimen/h2"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:id="@+id/textOldTMTEselon"
                    android:text="@string/tmt_eselon"
                    android:textSize="@dimen/text_h2"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/h3"
                    android:padding="@dimen/h2"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:id="@+id/textOldNoSK"
                    android:text="@string/no_sk"
                    android:textSize="@dimen/text_h2"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/h3"
                    android:padding="@dimen/h2"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h5"
                    android:background="@android:color/transparent"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/textJabatanBaru"
            android:text="@string/jabatan_baru"
            android:textSize="@dimen/text_h3"
            android:textColor="@color/black"
            android:layout_below="@+id/cardOldJabatan"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/h3"
            android:layout_marginStart="@dimen/_30"
            android:layout_marginEnd="@dimen/_30"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="@color/colorPrimary"
            android:layout_marginStart="@dimen/h5"
            android:layout_marginEnd="@dimen/h5"
            app:cardElevation="@dimen/h2"
            app:cardCornerRadius="@dimen/h2"
            android:layout_below="@+id/textJabatanBaru"
            android:id="@+id/cardNewJabatan"
            android:layout_marginTop="@dimen/h2"
            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/h2"
                android:orientation="vertical"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:id="@+id/textNewJabatan"
                    android:text="@string/jabatan"
                    android:textSize="@dimen/text_h2"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/h5"
                    android:padding="@dimen/h2"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:id="@+id/textNewJenis"
                    android:text="@string/jenis_jabatan"
                    android:textSize="@dimen/text_h2"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/h3"
                    android:padding="@dimen/h2"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:id="@+id/textNewTanggal"
                    android:text="@string/tanggal_sk_jabatan"
                    android:textSize="@dimen/text_h2"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/h3"
                    android:padding="@dimen/h2"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:id="@+id/textNewTMTJabatan"
                    android:text="@string/tmt_jabatan"
                    android:textSize="@dimen/text_h2"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/h3"
                    android:padding="@dimen/h2"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:id="@+id/textNewTMTEselon"
                    android:text="@string/tmt_eselon"
                    android:textSize="@dimen/text_h2"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/h3"
                    android:padding="@dimen/h2"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:background="@color/white"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:id="@+id/textNewNoSK"
                    android:text="@string/no_sk"
                    android:textSize="@dimen/text_h2"
                    android:textColor="@color/black"
                    android:layout_marginTop="@dimen/h3"
                    android:padding="@dimen/h2"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/h5"
                    android:background="@android:color/transparent"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>
        </androidx.cardview.widget.CardView>

        <include layout="@layout/progress_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress"
            android:visibility="gone"
            android:layout_centerInParent="true"
            />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBack"
            style="@style/buttonStandardGreen2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/h2"
            android:text="@string/back"
            android:textColor="@color/white"
            android:layout_marginTop="@dimen/margin_large"
            android:textAllCaps="false"
            android:layout_below="@+id/cardNewJabatan"
            android:layout_centerHorizontal="true"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_large"
            android:layout_below="@+id/btnBack"
            android:background="@android:color/transparent"
            />
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>