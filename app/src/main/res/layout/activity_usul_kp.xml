<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:theme="@style/CustomStyle"
    android:background="@color/white"
    tools:context="com.exomatik.manajemenpangkat.ui.pegawai.daftarUsulan.UsulKPActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="@dimen/h2"
            android:background="@color/white"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_back_black"
                    android:background="@drawable/btn_circle_gray"
                    android:layout_alignParentStart="true"
                    android:layout_marginStart="@dimen/h3"
                    android:id="@+id/btnBack"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:text="@string/usul_kp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_h3"
                    android:textStyle="bold"
                    tools:ignore="RelativeOverlap" />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/h5"
            android:orientation="vertical"
            android:layout_below="@id/toolbar"
            >
            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/nip"
                    android:textSize="@dimen/text_h2"
                    android:textColor="@color/black"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etNip"
                    style="@style/customEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/textStandardWhite"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_large"
                        android:maxLines="1"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:focusable="false"
                        android:padding="0dp"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/h2"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/nama"
                    android:textSize="@dimen/text_h2"
                    android:textColor="@color/black"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etNama"
                    style="@style/customEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/textStandardWhite"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_large"
                        android:maxLines="1"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:focusable="false"
                        android:padding="0dp"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/h2"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/pangkat_terakhir"
                    android:textSize="@dimen/text_h2"
                    android:textColor="@color/black"
                    />
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/etPangkat"
                    style="@style/customEditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65"
                    >
                    <com.google.android.material.textfield.TextInputEditText
                        style="@style/textStandardWhite"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/margin_large"
                        android:maxLines="1"
                        android:textAlignment="textStart"
                        android:textColor="@color/black"
                        android:focusable="false"
                        android:padding="0dp"
                        />
                </com.google.android.material.textfield.TextInputLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_large"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/h4"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/jenis_kenaikan_pangkat"
                    android:textSize="@dimen/text_h2"
                    android:textColor="@color/black"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/h3"
                    />
                <RelativeLayout
                    android:background="@drawable/border_spinner_transparent"
                    android:layout_width="0dp"
                    android:layout_weight="0.65"
                    android:layout_height="@dimen/margin_large"
                    android:paddingLeft="@dimen/h2"
                    android:paddingRight="@dimen/h2"
                    >
                    <androidx.appcompat.widget.AppCompatSpinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:id="@+id/spinnerJenisKenaikan"
                        android:elevation="@dimen/h2"
                        android:popupElevation="@dimen/h4"
                        android:dropDownSelector="@drawable/ic_spinner_gray"
                        android:background="@drawable/spinner_bg_white"
                        />
                </RelativeLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_large"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/h4"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/pangkat_gol_dan_ruang"
                    android:textSize="@dimen/text_h2"
                    android:textColor="@color/black"
                    android:paddingStart="0dp"
                    android:paddingEnd="@dimen/h3"
                    />
                <RelativeLayout
                    android:background="@drawable/border_spinner_transparent"
                    android:layout_width="0dp"
                    android:layout_weight="0.65"
                    android:layout_height="@dimen/margin_large"
                    android:paddingLeft="@dimen/h2"
                    android:paddingRight="@dimen/h2"
                    >
                    <androidx.appcompat.widget.AppCompatSpinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:id="@+id/spinnerAwal"
                        android:elevation="@dimen/h2"
                        android:popupElevation="@dimen/h4"
                        android:dropDownSelector="@drawable/ic_spinner_gray"
                        android:background="@drawable/spinner_bg_white"
                        />
                </RelativeLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/h2"
                android:layout_marginBottom="@dimen/h2"
                >
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.65"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/menjadi"
                    android:layout_gravity="center_horizontal"
                    android:textAlignment="center"
                    android:textSize="@dimen/text_h2"
                    android:textColor="@color/black"
                    />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.LinearLayoutCompat
                android:layout_width="match_parent"
                android:layout_height="@dimen/margin_large"
                android:orientation="horizontal"
                >
                <View
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.35"
                    android:fontFamily="@font/roboto_regular"
                    />
                <RelativeLayout
                    android:background="@drawable/border_spinner_transparent"
                    android:layout_width="0dp"
                    android:layout_weight="0.65"
                    android:layout_height="@dimen/margin_large"
                    android:paddingLeft="@dimen/h2"
                    android:paddingRight="@dimen/h2"
                    >
                    <androidx.appcompat.widget.AppCompatSpinner
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_centerInParent="true"
                        android:id="@+id/spinnerUsul"
                        android:elevation="@dimen/h2"
                        android:popupElevation="@dimen/h4"
                        android:dropDownSelector="@drawable/ic_spinner_gray"
                        android:background="@drawable/spinner_bg_white"
                        />
                </RelativeLayout>
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/next"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/text_h2"
                android:fontFamily="@font/roboto_regular"
                android:drawableEnd="@drawable/ic_next_green"
                android:drawablePadding="@dimen/h2"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="@dimen/h5"
                android:padding="@dimen/h2"
                android:backgroundTint="@color/white"
                android:id="@+id/btnNext"
                />
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/h5"
                android:background="@android:color/transparent"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <include layout="@layout/progress_loading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progress"
            android:visibility="gone"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>
</androidx.core.widget.NestedScrollView>