<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.exomatik.manajemenpangkat.ui.user.MainUserActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:contentInsetEnd="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:popupTheme="@style/CustomStyle.PopupOverlay"
            app:titleTextColor="@color/white">

            <RelativeLayout
                android:id="@+id/customeToolbar"
                android:layout_width="wrap_content"
                android:layout_height="?actionBarSize"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:visibility="visible"
                >

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgStyle"
                    android:layout_width="@dimen/_60"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:scaleType="centerInside"
                    android:src="@color/colorPrimaryDark"
                    />
                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/actionBarName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="@dimen/h2"
                    android:ellipsize="end"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center_vertical"
                    android:maxLines="1"
                    android:text="@string/app_name"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_h3"
                    android:textStyle="bold"
                    android:layout_toEndOf="@+id/imgStyle"
                    android:layout_centerVertical="true"
                    />
            </RelativeLayout>
        </androidx.appcompat.widget.Toolbar>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/h5"
            android:layout_marginStart="@dimen/h5"
            android:layout_marginTop="@dimen/h3"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardElevation="@dimen/h2"
            app:cardCornerRadius="@dimen/h2"
            android:layout_below="@+id/toolbar"
            android:id="@+id/cardInfoUser"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/h2"
                >
                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:id="@+id/textNama"
                    android:text="@string/nama"
                    android:textSize="@dimen/text_h2"
                    android:textColor="@color/white"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:id="@+id/textNip"
                    android:text="@string/nip"
                    android:textSize="@dimen/text_h2"
                    android:textColor="@color/white"
                    android:layout_below="@+id/textNama"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:id="@+id/textJabatan"
                    android:text="@string/jabatan"
                    android:layout_below="@+id/textNip"
                    android:layout_marginTop="@dimen/_80"
                    android:textSize="@dimen/text_h2"
                    android:textColor="@color/white"
                    android:layout_alignParentEnd="true"
                    />

                <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:id="@+id/textGol"
                    android:layout_below="@+id/textJabatan"
                    android:layout_alignParentEnd="true"
                    android:text="@string/gol"
                    android:textSize="@dimen/text_h2"
                    android:textColor="@color/white"
                    />
            </RelativeLayout>
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_regular"
            android:id="@+id/textInfo"
            android:text="@string/informasi_kenaikan_pangkat_jabatan"
            android:textSize="@dimen/text_h3"
            android:textColor="@color/black"
            android:layout_below="@+id/cardInfoUser"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/h3"
            android:layout_marginStart="@dimen/_30"
            android:layout_marginEnd="@dimen/_30"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_80"
            android:layout_marginEnd="@dimen/h5"
            android:layout_marginStart="@dimen/h5"
            android:layout_marginTop="@dimen/h3"
            app:cardBackgroundColor="@color/colorPrimary"
            app:cardElevation="@dimen/h2"
            app:cardCornerRadius="@dimen/h2"
            android:layout_below="@+id/textInfo"
            android:id="@+id/cardInfoPangkat"
            >
        </androidx.cardview.widget.CardView>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/cardInfoPangkat"
            android:layout_marginTop="@dimen/_40"
            android:id="@+id/lnBtn1"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnBiodata"
                style="@style/buttonStandardGreen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:layout_marginStart="@dimen/h5"
                android:text="@string/biodata"
                android:padding="@dimen/h5"
                android:textColor="@color/white"
                android:layout_marginTop="6dp"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnGol"
                style="@style/buttonStandardGreen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:layout_marginStart="@dimen/h2"
                android:layout_marginEnd="@dimen/h2"
                android:paddingTop="14dp"
                android:paddingBottom="14dp"
                android:paddingStart="@dimen/h5"
                android:paddingEnd="@dimen/h5"
                android:text="@string/gol_pangkat"
                android:textColor="@color/white"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnJabatan"
                style="@style/buttonStandardGreen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:layout_marginEnd="@dimen/h5"
                android:text="@string/jabatan"
                android:padding="@dimen/h5"
                android:textColor="@color/white"
                android:layout_marginTop="6dp"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_below="@+id/lnBtn1"
            android:layout_marginTop="@dimen/h2"
            >
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnUsulan"
                style="@style/buttonStandardGreen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_marginStart="@dimen/_60"
                android:layout_marginEnd="@dimen/h2"
                android:paddingTop="@dimen/h5"
                android:paddingBottom="@dimen/h5"
                android:paddingStart="@dimen/h1"
                android:paddingEnd="@dimen/h1"
                android:text="@string/daftar_usulan"
                android:textColor="@color/white"
                />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnArsip"
                style="@style/buttonStandardGreen"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:layout_marginEnd="@dimen/_60"
                android:layout_marginStart="@dimen/h2"
                android:padding="@dimen/h5"
                android:text="@string/arsip"
                android:textColor="@color/white"
                />
        </androidx.appcompat.widget.LinearLayoutCompat>
    </RelativeLayout>
</androidx.core.widget.NestedScrollView>